;; Settings
;;;;;;;;;;;;;;;;;;;;;

; CDN
settings[bootstrap_cdn] = 0

; Bootswatch
settings[bootstrap_bootswatch] = ''

; Breadcrumbs
settings[bootstrap_breadcrumb] = 1
settings[bootstrap_breadcrumb_home] = 0
settings[bootstrap_breadcrumb_title] = 1

; Navbar
settings[bootstrap_navbar_position] = ''
